# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
# Change these settings to your own preference
indent_style = space
indent_size = 2

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.sh]
indent_style = tab
indent_size = 4

[.babelrc]
indent_style = space
indent_size = 2

[.eslintrc.js]
indent_style = space
indent_size = 2

[.esmrc.json]
indent_style = space
indent_size = 2

[.gitmodules]
indent_style = tab
indent_size = 4

[package.json]
indent_style = space
indent_size = 2
